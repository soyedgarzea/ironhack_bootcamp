<div class="row justify-content-center align-items-center my-5 animated fadeIn">
	<div class="col-12 my-5">
		<div class="row justify-content-center align-items-center">
			<div class="col-11">
				<h2 class="s-title titles">Resultados</h2>
			</div>
		</div>

		<div class="row justify-content-around align-items-center my-5">
			{{#if doctors}}
				{{#each doctors}}
					{{> searchResultPartial}}
				{{/each}}
			{{else}}
				<div class="col-10 align-self-center my-5">
					<h2 class="error">
						No hemos encontrado doctores de con esta Especialidad
					</h2>
				</div>
				<div class="col-10 align-self-center mt-5 d-flex justify-content-center">
					<p class="texts">
						Tratemos con una búsqueda avanzada
					</p>
				</div>
				<div class="col-10 align-self-center mt-3 d-flex justify-content-center">
					<a href="/search/advanced" class="btn btn-mpk texts text-white">
						Búsqueda Avanzada
					</a>
				</div>
			{{/if}}
		</div>
	</div>
</div>